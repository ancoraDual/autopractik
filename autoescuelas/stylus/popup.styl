#mask 
	position absolute
	left 0
	top 0
	z-index 901
	display none 
	width 100% 
	height 100%
	img
		margin-left auto
		margin-right auto 
		display block


.window
	position absolute
	min-width 100px
	min-height 100px
	display none
	z-index 900

#loading 
	position fixed
	top 50% 
	left 50%
	z-index 90001 
	width 60px
	height 60px
	margin -30px 0 0 -30px
	text-indent -999em
	background url(../../img/progress.gif) no-repeat center center #000
	border-radius 5px
	display none


/* = Popup
------------- */

.popup
	
	position absolute
	top 10px
	left 10px
	min-height 50px
	overflow hidden 
	margin 10px 
	background color_content
	z-index zindex-n1
	shadow-exterior(10px, #acacac)


	&.small
		width 450px


	&.medium 
		width 650px

	&.large
		width 800px

	&.full
		width 100%

	
	.header-popup 
		height 50px 
		width 100%
		border-bottom 1px solid #ccc
		position relative
		background colorfondo-herramientas
		cursor pointer

		.title
			position absolute
			top 13px
			left 10px
			color color-gris-suave

			span
				margin 0 .3em
				font-size 1.2em
				color color_hover
		
		.close-btn
			position absolute
			top 15px
			right 15px
			color color_hover
			cursor pointer

	.content-popup
		padding 10px
		overflow-x hidden
		max-height 500px
		overflow-y auto
		width 100%

		td
			height 30px
			line-height 3px
			valign top

	.footer-popup 
		
		height 50px
		overflow hidden
		background-color White
		border-top 1px solid #ccc
		padding 7px


.photo
	background White
	width 100%
	height 100%
	position relative

	.icon-edit 		
		text-align center

		.icon
			display block
			padding 10px 0
			margin 0 auto
			font-size 5em
			color color-gris-suave

	.edit-btn
		position absolute
		bottom 5px
		right 5px
		color color_hover
		font-size 1.3em
		cursor pointer

			





  